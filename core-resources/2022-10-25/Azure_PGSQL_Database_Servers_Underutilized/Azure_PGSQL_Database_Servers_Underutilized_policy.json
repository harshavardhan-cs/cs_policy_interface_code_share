{
  "Version": "1.0",
  "RuleName": "AZURE_RESOURCE_UNDERUTILISED",
  "InputParameters": {
    "ElapsedDays": {
      "type": "string"
    },
    "MetricName": {
      "type": "string",
      "optional": true,
      "description": "Specify the appropriate Metric name like cpu_percent",
      "constraints": [
        {
          "allowed_values": [
            "active_connections",
            "backup_storage_used",
            "connections_failed",
            "cpu_percent",
            "io_consumption_percent",
            "memory_percent",
            "network_bytes_egress",
            "network_bytes_ingress",
            "pg_replica_log_delay_in_bytes",
            "pg_replica_log_delay_in_seconds",
            "serverlog_storage_limit",
            "serverlog_storage_percent",
            "serverlog_storage_usage",
            "storage_limit",
            "storage_percent",
            "storage_used"
          ]
        }
      ]
    }
  }
}